<!-- index.ejs -->
<html>
  <head>
    <title>Homepage</title>
    <link rel="stylesheet" href="style.css" />
    <link rel="icon" type="image/x-icon" href="messageIcon.svg" />
  </head>
  <body>
    <%- include("header") %>
    <main>
      <div class="homepageContainer">
        <h1>Messages</h1>
        <div class="messagesGrid">
          <% if (locals.messages) messages.forEach((message) => { %>
          <a class="message" href="/<%= message.id %>">
            <div class="text"><b>Message:</b> <%= message.text %></div>
            <div class="author"><b>By:</b> <%= message.author %></div>
            <div class="dateAdded"><b>Added at:</b> <%= message.added %></div>
          </a>
          <% }) %>
        </div>
      </div>
    </main>
    <%- include("footer") %>
  </body>
</html>
