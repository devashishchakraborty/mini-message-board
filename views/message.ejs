<!-- message.ejs -->
<html>
  <head>
    <title>Message</title>
    <link rel="stylesheet" href="style.css" />
    <link rel="icon" type="image/x-icon" href="messageIcon.svg" />
  </head>
  <body>
    <%- include("header") %>
    <main>
      <div class="messageContainer">
        <h1>Message</h1>
        <div class="text"><b>Message:</b> <%= message.text %></div>
        <div class="author"><b>By:</b> <%= message.author %></div>
        <div class="dateAdded"><b>Added at:</b> <%= message.added %></div>
      </div>
    </main>
    <%- include("footer") %>
  </body>
</html>
